<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/merchant_name_key"
        android:title="@string/merchant_name"
        android:dialogTitle="@string/merchant_name" />


    <Preference
        android:key="@string/payment_address_key"
        android:title="@string/payment_address"
        android:dialogTitle="@string/payment_address"/>

    <ListPreference
        android:key="@string/local_currency_key"
        android:title="@string/local_currency"
        android:entries="@array/currency_names"
        android:entryValues="@array/currency_codes"
        android:dialogTitle="@string/local_currency" />

</PreferenceScreen>